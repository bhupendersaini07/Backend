fs.readFile("data1.txt","utf-8",(err,data1)=>{
    if(err) throw err;
    fs.readFile("data2.txt","utf-8",(err,data2)=>{
        if(err) throw err;
        fs.writeFile("combinedData.txt",data1+data2,(err)=>{
            if(err) throw err;

        })
    })
})
